@model MerchStore.Models.CartViewModel

<style>
  .cart-container {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(12px);
    border: 2px solid rgba(255, 215, 0, 0.3);
    border-radius: 1.5rem;
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.2);
    color: white;
  }

  table thead {
    background: rgba(255, 255, 255, 0.1);
    color: #ffd700;
  }

  table tbody tr {
    background: rgba(255, 255, 255, 0.05);
    transition: background 0.3s ease;
  }

  table tbody tr:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .total-price {
    color: #ffd700;
    text-shadow: 0 0 10px rgba(255, 215, 0, 0.6);
  }

  .continue-btn {
    background-color: #666;
    color: white;
    border: 1px solid transparent;
    border-radius: 0.5rem;
    padding: 0.5rem 1.5rem;
    transition: all 0.3s ease;
  }

  .continue-btn:hover {
    background-color: #888;
    border-color: #ccc;
  }

  .checkout-btn {
    background-color: #ffd700;
    color: black;
    border: none;
    padding: 0.5rem 1.5rem;
    font-weight: bold;
    border-radius: 0.5rem;
    box-shadow: 0 0 12px rgba(255, 215, 0, 0.4);
    transition: all 0.3s ease;
  }

  .checkout-btn:hover {
    background-color: #ffea60;
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.6);
  }
</style>

<div class="max-w-4xl mx-auto p-6 cart-container">
  <h1 class="text-3xl font-bold mb-6 text-yellow-300">Your Shopping Cart üõí</h1>

  <table class="w-full table-auto mb-8 rounded-lg overflow-hidden">
    <thead>
      <tr>
        <th class="p-3 text-left">Product</th>
        <th class="p-3 text-center">Unit (‚Ç¨)</th>
        <th class="p-3 text-center">Qty</th>
        <th class="p-3 text-right">Subtotal (‚Ç¨)</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model.Items)
      {
        <tr class="border-b border-gray-700">
          <td class="p-3">@item.ProductName</td>
          <td class="p-3 text-center">@item.UnitPrice.ToString("0.00")</td>
          <td class="p-3 text-center">@item.Quantity</td>
          <td class="p-3 text-right">@item.Subtotal.ToString("0.00")</td>
        </tr>
      }
    </tbody>
  </table>

  <div class="flex justify-end items-center space-x-6">
    <span class="text-xl font-semibold text-white">Total:</span>
    <span class="text-2xl font-bold total-price">‚Ç¨@Model.TotalPrice.ToString("0.00")</span>
  </div>

  <div class="mt-8 flex justify-end space-x-4">
<a asp-controller="Catalog" asp-action="Index" class="continue-btn">‚Üê Continue Shopping</a>
<a asp-controller="Checkout" asp-action="Index" class="checkout-btn">Checkout ‚Üí</a>
  </div>
</div>
