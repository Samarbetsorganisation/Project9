@model MerchStore.WebUI.Models.Admin.AdminProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrWhiteSpace(Model.ExistingImageUrl))
            {
                <img src="@Model.ExistingImageUrl" class="img-fluid rounded-start" alt="Product Image" />
            }
            else
            {
                <span class="text-muted">No image uploaded.</span>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><strong>Price:</strong> @Model.PriceAmount.ToString("C")</p>
                <p class="card-text"><strong>Stock:</strong> @Model.StockQuantity</p>
                <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                <p class="card-text"><strong>Tags:</strong> @Model.Tags</p>
            </div>
        </div>
    </div>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>