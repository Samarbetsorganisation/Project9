@model MerchStore.WebUI.Models.Admin.AdminProductViewModel

@{
    ViewData["Title"] = "MerchStore - Create Product";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .glassy-panel {
        backdrop-filter: blur(10px);
        background: rgba(0, 0, 0, 0.4);
        border: 2px solid rgba(255, 215, 0, 0.2);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 0 25px rgba(255, 215, 0, 0.2);
        color: white;
        transition: box-shadow 0.3s ease;
    }
    .glassy-panel:hover {
        box-shadow: 0 0 45px rgba(255, 215, 0, 0.5);
    }
    .gold-divider {
        border: none;
        height: 2px;
        background: rgba(255, 215, 0, 0.6);
        width: 50%;
        margin: 1rem auto;
    }
    .form-label {
        color: #ffd700;
        font-weight: 600;
    }
    .form-control {
        background-color: #1f2937;
        color: white;
        border: 1px solid #ffd700;
        border-radius: 0.5rem;
        padding: 0.5rem;
    }
    .form-control:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.3);
    }
    .btn-create {
        background-color: #ffd700;
        color: black;
        font-weight: 600;
        border-radius: 0.5rem;
        padding: 0.5rem 1.5rem;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
    }
    .btn-create:hover {
        background-color: #e6c200;
    }
    .btn-cancel {
        background-color: #495057;
        color: white;
        border-radius: 0.5rem;
        padding: 0.5rem 1.5rem;
    }
    .validation-summary {
        color: #f87171;
    }
</style>

<nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb text-white shadow-sm">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-yellow-300">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="AdminProducts" asp-action="Index" class="text-yellow-300">Product Management</a></li>
        <li class="breadcrumb-item active text-white" aria-current="page">Create</li>
    </ol>
</nav>

<div class="glassy-panel mx-auto mt-5" style="max-width: 36rem;">
    <h1 class="text-3xl text-yellow-300 font-bold text-center mb-2">Create New Product</h1>
    <hr class="gold-divider" />

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="mt-6 space-y-6">
        <div asp-validation-summary="ModelOnly" class="validation-summary text-center"></div>

        <div>
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control w-full" />
            <span asp-validation-for="Name" class="text-red-400 text-sm"></span>
        </div>

        <div>
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" rows="3" class="form-control w-full"></textarea>
            <span asp-validation-for="Description" class="text-red-400 text-sm"></span>
        </div>

        <div>
            <label asp-for="PriceAmount" class="form-label">Price (Kr)</label>
            <input asp-for="PriceAmount" class="form-control w-full" />
            <span asp-validation-for="PriceAmount" class="text-red-400 text-sm"></span>
        </div>

        <div>
            <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
            <input asp-for="StockQuantity" class="form-control w-full" />
            <span asp-validation-for="StockQuantity" class="text-red-400 text-sm"></span>
        </div>

        <div>
            <label asp-for="Category" class="form-label">Category</label>
            <input asp-for="Category" class="form-control w-full" />
            <span asp-validation-for="Category" class="text-red-400 text-sm"></span>
        </div>

        <div>
            <label asp-for="Tags" class="form-label">Tags</label>
            <input asp-for="Tags" class="form-control w-full" placeholder="e.g. hoodie, blue, sale" />
            <span asp-validation-for="Tags" class="text-red-400 text-sm"></span>
        </div>

        <div>
            <label asp-for="ImageFile" class="form-label">Upload Image</label>
            <input asp-for="ImageFile" type="file" class="form-control w-full" />
            <span asp-validation-for="ImageFile" class="text-red-400 text-sm"></span>
        </div>

        <div class="flex justify-end space-x-4 pt-4">
            <button type="submit" class="btn-create">Create</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>
