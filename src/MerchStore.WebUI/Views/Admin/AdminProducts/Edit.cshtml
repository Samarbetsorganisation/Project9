@model MerchStore.WebUI.Models.Admin.AdminProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PriceAmount"></label>
        <input asp-for="PriceAmount" class="form-control" />
        <span asp-validation-for="PriceAmount" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="StockQuantity"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Tags"></label>
        <input asp-for="Tags" class="form-control" placeholder="Comma separated: e.g. hoodie, blue, sale" />
        <span asp-validation-for="Tags" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>Current Image</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.ExistingImageUrl))
        {
            <img src="@Model.ExistingImageUrl" alt="Current Image" style="max-width:120px; max-height:120px;" />
        }
        else
        {
            <span class="text-muted">No image uploaded.</span>
        }
    </div>
    
    <div class="form-group">
        <label asp-for="ImageFile">Replace Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>