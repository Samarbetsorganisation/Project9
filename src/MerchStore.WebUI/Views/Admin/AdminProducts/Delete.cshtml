@model MerchStore.WebUI.Models.Admin.AdminProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this product?</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.PriceAmount.ToString("C")</dd>

    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.StockQuantity</dd>
    
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>
    
    <dt class="col-sm-2">Tags</dt>
    <dd class="col-sm-10">@Model.Tags</dd>
    
    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrWhiteSpace(Model.ExistingImageUrl))
        {
            <img src="@Model.ExistingImageUrl" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
        }
        else
        {
            <span class="text-muted">No image uploaded.</span>
        }
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>