@model MerchStore.WebUI.Models.Admin.AdminProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<section class="mx-auto max-w-3xl mt-10 p-6 rounded-xl shadow-xl backdrop-blur-md bg-black bg-opacity-50 text-yellow-100">
    <h1 class="text-3xl text-yellow-300 font-bold text-center mb-6">Delete Product</h1>

    <div class="bg-red-900 bg-opacity-30 border border-red-500 text-red-300 text-center p-4 rounded mb-6 font-semibold">
        Are you absolutely sure you want to delete this product? This action cannot be undone.
    </div>

    <div class="bg-gray-900 bg-opacity-30 p-6 rounded-lg space-y-4">
        <div class="grid grid-cols-3 gap-2">
            <div class="font-semibold text-yellow-300">Name:</div>
            <div class="col-span-2">@Model.Name</div>

            <div class="font-semibold text-yellow-300">Description:</div>
            <div class="col-span-2">@Model.Description</div>

            <div class="font-semibold text-yellow-300">Price:</div>
            <div class="col-span-2">@Model.PriceAmount.ToString("C")</div>

            <div class="font-semibold text-yellow-300">Stock:</div>
            <div class="col-span-2">@Model.StockQuantity</div>

            <div class="font-semibold text-yellow-300">Category:</div>
            <div class="col-span-2">@Model.Category</div>

            <div class="font-semibold text-yellow-300">Tags:</div>
            <div class="col-span-2">@Model.Tags</div>

            <div class="font-semibold text-yellow-300">Image:</div>
            <div class="col-span-2">
                @if (!string.IsNullOrWhiteSpace(Model.ExistingImageUrl))
                {
                    <img src="@Model.ExistingImageUrl" alt="Product Image" class="w-24 h-24 object-cover rounded shadow" />
                }
                else
                {
                    <span class="text-gray-400 italic">No image uploaded.</span>
                }
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-6 flex justify-end space-x-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="px-6 py-2 bg-red-700 hover:bg-red-600 text-white font-bold rounded shadow">
            Delete
        </button>
        <a asp-action="Index" class="px-6 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded shadow">
            Cancel
        </a>
    </form>
</section>