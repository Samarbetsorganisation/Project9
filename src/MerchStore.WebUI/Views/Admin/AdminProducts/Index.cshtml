@model IEnumerable<MerchStore.Domain.Entities.Product>

@{
    ViewData["Title"] = "Admin - Products";
}

<h1>Admin - Products</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Product</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Name</td>
        <td>@item.Price.Amount.ToString("C")</td>
        <td>@item.StockQuantity</td>
        <td>@item.Category</td>
        <td>
            @if (item.Tags != null && item.Tags.Any())
            {
                @string.Join(", ", item.Tags)
            }
        </td>
        <td>
            @if (item.ImageUrl != null)
            {
                <img src="@item.ImageUrl" alt="Product Image" style="max-width: 60px; max-height: 60px;" />
            }
        </td>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>