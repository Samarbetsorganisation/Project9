@using System.Security.Claims

<div class="row justify-content-center themed-claim-wrapper">
    <div class="col-md-8">
        <div class="card themed-card">
            <div class="card-header themed-card-header">
                <h2 class="fs-4 mb-0">Who Am I?</h2>
            </div>
            <div class="card-body themed-card-body">
                <div class="table-responsive themed-table-wrapper">
                    <table class="table themed-table">
                        <thead>
                            <tr>
                                <th>Claim Type</th>
                                <th>Claim Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in User.Claims)
                            {
                                <tr>
                                    <td>@claim.Type</td>
                                    <td>@claim.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer themed-card-footer">
                <small><i class="bi bi-info-circle"></i> These are your identity claims from the authentication system</small>
            </div>
        </div>
    </div>
</div>

<style>
    /* ============================
