@{
    ViewData["Title"] = "Home Page";
}

<style>

    /* Apply the font to specific elements in this view */
    .text-center h1,
    .text-center .lead,
    .text-center .btn {
        font-family: 'lotr', sans-serif; /* Use 'lotr' and a fallback */
    }
</style>

<div class="text-center">
    <br></br><h1 class="display-4">Welcome to The Gandalf Fan Club Store!</h1>

    <div class="d-flex flex-column align-items-center mt-4">
        <img src="~/Images/gandalfFace.png" 
             alt="Gandalf the Grey" 
             class="rounded-circle"
             style="width: 400px; height: 400px; object-fit: cover;" />
        <p class="lead mt-3 text-center" style="text-shadow: 1px 1px 2px black;">
            Browse our exclusive collection of Gandalf memorabilia!
        </p>
    </div>

    <a asp-controller="Catalog" asp-action="Index" class="btn btn-lg btn-outline-warning mt-2">
        <i class="bi bi-shop"></i> Explore Products
    </a>
</div>