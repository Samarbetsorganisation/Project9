@model MerchStore.Models.ThanksViewModel

<style>
  .checkout-container {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 215, 0, 0.3);
    border-radius: 1.5rem;
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.15);
    color: white;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 3rem;
  }

  .checkout-container legend {
    color: #ffd700;
    text-shadow: 0 0 5px rgba(255, 215, 0, 0.6);
  }

  .checkout-input {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid #ccc;
    color: white;
    transition: box-shadow 0.3s ease;
  }

  .checkout-input:focus {
    outline: none;
    box-shadow: 0 0 8px rgba(255, 215, 0, 0.7);
    border-color: #ffd700;
  }

  .checkout-button {
    background-color: #ffd700;
    color: black;
    font-weight: bold;
    border: none;
    box-shadow: 0 0 12px rgba(255, 215, 0, 0.3);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  .checkout-button:hover {
    background-color: #ffe76b;
    box-shadow: 0 0 18px rgba(255, 215, 0, 0.5);
  }

  .order-summary {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: 1rem;
    box-shadow: 0 0 15px rgba(255, 215, 0, 0.1);
    color: white;
  }
</style>

<div class="max-w-6xl mx-auto checkout-container">
  <h1 class="text-3xl font-bold mb-6 text-yellow-300">
    Thank you for trying!
  </h1>

  <h2 class="text-2xl font-bold mb-6 text-yellow-300">
    Unfortunately, weâ€™re unable to process your subscription until the next moon cycle has completed. <br></br>
    But we recieved your money!
  </h2>

  <img src="~/Images/GandalfMeme.gif" 
       alt="Gandalf the Grey" 
       class="rounded-circle"
       style="width: 400px; height: 400px; object-fit: cover;" />
</div>
