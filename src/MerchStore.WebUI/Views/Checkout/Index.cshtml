@model MerchStore.Models.CheckoutViewModel

<style>
  .checkout-container {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 215, 0, 0.3);
    border-radius: 1.5rem;
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.15);
    color: white;
  }

  .checkout-container legend {
    color: #ffd700;
    text-shadow: 0 0 5px rgba(255, 215, 0, 0.6);
  }

  .checkout-input {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid #ccc;
    color: white;
    transition: box-shadow 0.3s ease;
  }

  .checkout-input:focus {
    outline: none;
    box-shadow: 0 0 8px rgba(255, 215, 0, 0.7);
    border-color: #ffd700;
  }

  .checkout-button {
    background-color: #ffd700;
    color: black;
    font-weight: bold;
    border: none;
    box-shadow: 0 0 12px rgba(255, 215, 0, 0.3);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  .checkout-button:hover {
    background-color: #ffe76b;
    box-shadow: 0 0 18px rgba(255, 215, 0, 0.5);
  }

  .order-summary {
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: 1rem;
    box-shadow: 0 0 15px rgba(255, 215, 0, 0.1);
    color: white;
  }
</style>

<div class="max-w-6xl mx-auto p-6 grid grid-cols-3 gap-8 checkout-container">
  <!-- üßæ Form -->
  <div class="col-span-2">
    <h1 class="text-3xl font-bold mb-6 text-yellow-300">Checkout üí≥</h1>

    <form asp-action="Index" method="post" class="space-y-6">
      <!-- üì¶ Shipping -->
      <fieldset class="border border-yellow-200 p-4 rounded">
        <legend class="font-semibold">Shipping & Billing</legend>
        <div class="grid grid-cols-2 gap-4 mt-4">
          <input asp-for="FullName" placeholder="Full Name" class="checkout-input p-2 rounded w-full" />
          <input asp-for="Email" type="email" placeholder="Email" class="checkout-input p-2 rounded w-full" />
          <input asp-for="AddressLine1" placeholder="Address Line 1" class="checkout-input p-2 rounded w-full" />
          <input asp-for="AddressLine2" placeholder="Address Line 2" class="checkout-input p-2 rounded w-full" />
          <input asp-for="City" placeholder="City" class="checkout-input p-2 rounded w-full" />
          <input asp-for="PostalCode" placeholder="Postal Code" class="checkout-input p-2 rounded w-full" />
          <input asp-for="Country" placeholder="Country" class="checkout-input p-2 rounded w-full" />
        </div>
      </fieldset>

      <!-- üí≥ Payment -->
      <fieldset class="border border-yellow-200 p-4 rounded">
        <legend class="font-semibold">Payment Info</legend>
        <div class="mt-4 grid grid-cols-2 gap-4">
          <input asp-for="CardNumber" placeholder="Card Number" class="checkout-input p-2 rounded w-full" />
          <div class="flex space-x-2">
            <input asp-for="ExpiryMonth" placeholder="MM" class="checkout-input p-2 rounded w-1/2" />
            <input asp-for="ExpiryYear" placeholder="YY" class="checkout-input p-2 rounded w-1/2" />
          </div>
          <input asp-for="CVV" placeholder="CVV" class="checkout-input p-2 rounded w-full" />
        </div>
      </fieldset>

      <button type="submit" class="w-full py-3 checkout-button rounded">
        Place Order üöÄ
      </button>
    </form>
  </div>

  <!-- üõí Order Summary -->
  <aside class="col-span-1 order-summary p-4 rounded">
    <h2 class="text-xl font-semibold mb-4 text-yellow-300">Your Order üõçÔ∏è</h2>
    <ul class="space-y-2">
      @foreach (var item in Model.Items)
      {
        <li class="flex justify-between">
          <span>@item.ProductName x @item.Quantity</span>
          <span>‚Ç¨@item.Subtotal.ToString("0.00")</span>
        </li>
      }
    </ul>
    <div class="border-t border-yellow-200 mt-4 pt-4 flex justify-between font-bold text-yellow-300">
      <span>Total:</span>
      <span>‚Ç¨@Model.TotalPrice.ToString("0.00")</span>
    </div>
  </aside>
</div>
